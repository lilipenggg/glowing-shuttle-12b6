@model web.Models.ApplicationUserModel
@{
    ViewBag.Title = Model.ApplicatinUserUserName;
}

<form asp-action="Edit" method="post" class="form-horizontal" role="form">
    <h2>Hi there, @Model.ApplicationUserFirstName</h2>
    <hr/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4>Your Information</h4>
    <hr/>
    <div class="form-group">
        <label asp-for="ApplicatinUserUserName" class="col-md-2 control-label">User Name</label>
        <div class="col-md-5">
            <input asp-for="ApplicatinUserUserName" class="form-control" readonly="readonly"/>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="ApplicationUserAwardPoints" class="col-md-2 control-label">Award Points</label>
        <div class="col-md-5">
            <input asp-for="ApplicationUserAwardPoints" class="form-control" readonly="readonly"/>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="ApplicationUserFirstName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ApplicationUserFirstName" class="form-control" />
            <span asp-validation-for="ApplicationUserFirstName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ApplicationUserLastName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ApplicationUserLastName" class="form-control" />
            <span asp-validation-for="ApplicationUserLastName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ApplicationUserEmail" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ApplicationUserEmail" class="form-control" />
            <span asp-validation-for="ApplicationUserEmail" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="ApplicationUserPhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ApplicationUserPhoneNumber" class="form-control" />
            <span asp-validation-for="ApplicationUserPhoneNumber" class="text-danger"></span>
        </div>
    </div>
    <hr/>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Save Information" />
        </div>
    </div>
    <br/>
</form>