@model web.Models.ProductModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail" style="display:inline-block; height: 400px;">
        <img src="@Model.ProductImage" alt="@Model.ProductName">
        <div class="caption">
            <h3 class="pull-right">@Model.ProductUnitPrice.ToString("c")</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-productId="@Model.ProductId">@Model.ProductName</a>
            </h3>
            <p style="display: inline-block; height: 160px; overflow: hidden; text-overflow: ellipsis;">@Model.ProductDescription</p>
        </div>
        <div class="addToCart" style="text-align: center; vertical-align: bottom;">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-productId="@Model.ProductId">Add to cart</a>
            </p>
        </div>
    </div>
</div>