@model web.Models.ProductModel

<div class="col-sm-4 col-lg-4 col-md-4">
    <div class="thumbnail">
        <img src="@Model.ProductImage" alt="">
        <div class="caption">
            <h3 class="pull-right">@Model.ProductUnitPrice.ToString("c")</h3>
            <h3>
                <a asp-controller="Product" asp-action="Details" asp-route-id="@Model.ProductId">@Model.ProductName</a>
            </h3>
            <p>@Model.ProductDescription</p>
        </div>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-product="@Model.ProductId">Add to cart</a>
            </p>
        </div>
    </div>
</div>