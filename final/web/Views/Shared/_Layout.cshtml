<!DOCTYPE html>
<html>
<head>
    <title>Kiosk Fair: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet"/>
    <link href="~/lib/fontawesome/css/font-awesome.min.css" rel="stylesheet"/>
</head>

<body>
<div class="navbar navbar-inverse">
    <header class="container">
        <div class="navbar-header">
            <div class="navbar-brand"><i class="fa fa-shopping-bag"></i>    Kiosk Fair</div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#menu">&#9776;</button>
        </div>
        @await Html.PartialAsync("NavigationPartial")
    </header>
</div>

<section class="container">
    <h2 class="text-center">@ViewBag.Title</h2>
    @RenderBody()
</section>

<footer class="container">
    <div class="text-center">Copyright 2018 Kiosk Fair LLC</div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
@RenderSection("scripts", false)

</body>
</html>